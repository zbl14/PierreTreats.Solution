@{
  Layout = "_Layout";
}

@using PierreTreats.Models;
@model IEnumerable<PierreTreats.Models.Flavor>

<div class="jumbotron text-center">
  <h2>Flavors List</h2>
</div>
<nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          @Html.ActionLink("Home", "Index", "Home", null, new { @class="nav-link" })
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#!" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Treats
          </a>
          <ul class="dropdown-menu">
            <li>@Html.ActionLink("All Treats", "Index", "Treats", null, new { @class="dropdown-item" })</li>
            <li>@Html.ActionLink("New Treat", "Create", "Treats", null, new { @class="dropdown-item" })</li>
          </ul>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#!" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Flavors
          </a>
          <ul class="dropdown-menu">
            <li>@Html.ActionLink("All Flavors", "Index", "Flavors", null, new { @class="dropdown-item" })</li>
            <li>@Html.ActionLink("New Flavor", "Create", "Flavors", null, new { @class="dropdown-item" })</li>
          </ul>
        </li>
      </ul>
      <div>
        @using (Html.BeginForm("Index","Flavors",FormMethod.Get))
        { 
          <div class="d-flex" role="search">
            @Html.TextBox("SearchString", null, new { type="search", placeholder = "Search", @class="form-control me-2"}) 
            <button class="btn btn-outline-success" type="submit">Search</button>
          </div>
        }
      </div>
    </div>
  </div>
</nav>
<hr />
<div>
  @if (Model.Any())
  {
    <ul>
      @foreach(Flavor flavor in Model)
      {
        <li>
          <div class="row mb-2">
            <div class="col-sm-3">
              @Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId }) 
            </div>
          </div>
        </li> 
      }
    </ul>
  }
  else
  {
    <h3>No flavors have been added.</h3>
  }
</div>