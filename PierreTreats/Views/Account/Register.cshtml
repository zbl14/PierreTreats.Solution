@{
  Layout = "_Layout";
}

@using PierreTreats.ViewModels
@model RegisterViewModel

<div class="jumbotron text-center">
  <h2>Register a new user</h2>
</div>
<hr />
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
  <div class="form-group row mb-3">
    @Html.LabelFor(user => user.Email, new { @class="col-form-label col-md-2"})
    <div class="col-md-4">
      @Html.TextBoxFor(user=> user.Email, new { @class="form-control", @required="required"})
    </div>
  </div>
  <div class="form-group row mb-3">
    @Html.LabelFor(user=> user.Password, new { @class="col-form-label col-md-2"})
    <div class="col-md-4">
      @Html.PasswordFor(user=> user.Password, new { @class="form-control", @required="required"})
    </div>
  </div>
  <div class="form-group row mb-3">
    @Html.LabelFor(user=> user.ConfirmPassword, new { @class="col-form-label col-md-2"})
    <div class="col-md-4">
      @Html.PasswordFor(user=> user.ConfirmPassword, new { @class="form-control", @required="required"})
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-4 offset-md-2"> 
      <button type="submit" class="btn btn-outline-dark">Register</button>
    </div>
  </div>
}


