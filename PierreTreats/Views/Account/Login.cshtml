@{
  Layout = "_Layout";
}

@using PierreTreats.ViewModels
@model LoginViewModel

<div class="jumbotron text-center">
  <h2>Log in with your account</h2>
</div>
<nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          @Html.ActionLink("Home", "Index", "Home", null, new { @class="nav-link" })
        </li>
      </ul>
    </div>
  </div>
</nav>
<hr />
@using (Html.BeginForm())
{
  <div class="form-group row mb-3">
    @Html.LabelFor(model => model.Email, new { @class="col-form-label col-md-2"})
    <div class="col-md-4">
      @Html.TextBoxFor(model => model.Email, new { @class="form-control", @required="required"})
    </div>
  </div>  
  <div class="form-group row mb-3">
    @Html.LabelFor(model => model.Password, new { @class="col-form-label col-md-2"})
    <div class="col-md-4">
      @Html.PasswordFor(model => model.Password, new { @class="form-control", @required="required"})
    </div>
  </div>
  <div class="form-group row">
    <div class="col-md-4 offset-md-2"> 
      <button type="submit" class="btn btn-outline-dark">Log in</button>
    </div>
  </div>
}
